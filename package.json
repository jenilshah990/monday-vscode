{
  "name": "monday-vscode",
  "displayName": "Monday_VSCode",
  "description": "VSCode Extension for Monday.com",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:monday-vscode.helloWorld",
    "onCommand:monday-vscode.showTime",
    "onCommand:monday-vscode.login",
    "onCommand:monday-vscode.showBoards",
    "onCommand:monday-vscode.commentItems",
    "onCommand:monday-vscode.completeItem",
    "onView:monday-vscode.exampleView",
    "onCommand:monday-vscode.createItem"
  ],
  "main": "./out/extension.js",
  "contributes": {
  
    "views": {
      "explorer": [
          {
              "id": "exampleView",
              "name": "exampleView"
          }
      ]
    },
    
    "commands": [
      {
        "command": "monday-vscode.helloWorld",
        "title": "Hello World",
        "category": "Monday"
      },
      {
        "command": "monday-vscode.showTime",
        "title": "Show Time", 
        "category": "Monday"
      },
      {
        "command": "monday-vscode.login",
        "title": "Login", 
        "category": "Monday"
      },
      {
        "command": "monday-vscode.logout",
        "title": "Logout", 
        "category": "Monday"
      },
      {
        "command": "monday-vscode.showBoards",
        "title": "Show Boards", 
        "category": "Monday"
      },
      {
        "command": "monday-vscode.commentItems",
        "title": "See Items", 
        "category": "Monday"
      },
      {
        "command": "monday-vscode.completeItem",
        "title": "Modify Item", 
        "category": "Monday"
      },
      {
        "command": "monday-vscode.createItem",
        "title": "Create Item",
        "category": "Monday"
      },
      {
        "command": "monday-vscode.exampleView",
        "title": "example",
        "category": "Monday"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/monday-sdk-js": "^0.1.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "monday-sdk-js": "^0.1.3"
  }
}
